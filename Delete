#include <stdio.h>

int main() {
    int steps = 0, turns = 0;
    char command;

    printf("Willkommen beim Robotersteuerungsprogramm!\n");
    printf("Befehle: 's' (Schritt), 'd' (Drehung), 'q' (beenden)\n");

    while (command != 'q') {
        printf("Was soll der Roboter als nächstes tun?\n");
        scanf(" %c", &command);

        switch (command) {
            case 's':
                steps++;
                printf("Der Roboter geht einen Schritt nach vorne.\n");
                if (steps % 5 == 0) {
                    printf("Der Roboter trifft auf eine Wand.\n");
                }
                break;
            case 'd':
                char direction;
                printf("In welche Richtung soll der Roboter sich drehen? (l/r)\n");
                scanf(" %c", &direction);
                if (direction == 'r') {
                    turns++;
                    printf("Der Roboter dreht sich um 90 Grad nach rechts.\n");
                } else if (direction == 'l') {
                    turns--;
                    printf("Der Roboter dreht sich um 90 Grad nach links.\n");
                } else {
                    printf("Unbekannte Drehrichtung, bitte versuchen Sie es erneut!\n");
                }
                break;
            case 'q':
                printf("Der Roboter wird beendet!\n");
                break;
            default:
                      }
    }

    if (turns >= 4) {
        printf("Der Roboter geht den halben Weg zurück, da er Akku braucht.\n");
        printf("Soll der Roboter zur Ladestation fahren? (y/n)\n");
        char answer;
        scanf(" %c", &answer);
        if (answer == 'y') {
            printf("Der Roboter fährt zur Ladestation, die 5 Schritte entfernt ist.\n");
        } else {
            printf("Der Roboter bleibt an Ort und Stelle.\n");
        }
    } else {
        printf("Der Roboter ist noch nicht weit genug gegangen, um den Akku zu entladen.\n");
    }

    return 0;
}
