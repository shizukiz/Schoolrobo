#include <stdio.h>

int main() {
    int steps = 0, turns = 0;
    char command;

    printf("Willkommen beim Robotersteuerungsprogramm!\n");
    printf("Befehle: 's' (Schritt), 'd' (Drehung), 'j' (springen), 'h' (hüpfen), 'q' (beenden)\n");

    while (command != 'q') {
        printf("Was soll der Roboter als nächstes tun?\n");
        scanf(" %c", &command);

        switch (command) {
            case 's':
                steps++;
                printf("Der Roboter geht einen Schritt nach vorne.\n");
                if (steps % 5 == 0) {
                    printf("Eine Wand ist aufgetaucht!\n");
                    printf("In welche Richtung soll sich der Roboter drehen? (l/r)\n");
                    char direction;
                    scanf(" %c", &direction);
                    if (direction == 'l') {
                        printf("Der Roboter dreht sich um 90 Grad nach links.\n");
                        turns--;
                    } else {
                        printf("Der Roboter dreht sich um 90 Grad nach rechts.\n");
                        turns++;
                    }
                }
                break;
            case 'd':
                turns++;
                printf("Der Roboter dreht sich um 90 Grad nach rechts.\n");
                break;
            case 'j':
                char jump;
                printf("Soll der Roboter über die Box springen? (y/n)\n");
                scanf(" %c", &jump);
                if (jump == 'y') {
                    printf("Der Roboter springt über die Box!\n");
                } else {
                    printf("Der Roboter läuft um die Box herum.\n");
                }
                break;
            case 'h':
                for (int i = 0; i < 3; i++) {
                    printf("Der Roboter hüpft!\n");
                }
                break;
            case 'q':
                printf("Der Roboter wird beendet!\n");
                break;
            default:
                printf("Unbekannter Befehl, bitte versuchen Sie es erneut!\n");
                break;
        }
    }

    // Rückweg
    for (int i = 0; i < steps; i++) {
        printf("Soll der Roboter einen Schritt zurück machen? (y/n)\n");
        char answer;
        scanf(" %c", &answer);
        if (answer == 'y') {
            printf("Der Roboter geht einen Schritt zurück.\n");
        } else {
            printf("Der Roboter wartet an Ort und Stelle.\n");
        }
    }
    for (int i = 0; i < turns; i++) {
        printf("Der Roboter dreht sich um 90 Grad nach links.\n");
    }

    printf("Der Roboter ist zurück am Start!\n");

    return 0;
}
