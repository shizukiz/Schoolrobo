#include <stdio.h>

int main() {
    int steps = 0, turns = 0, back_steps = 0;
    char command;

    printf("Willkommen beim Robotersteuerungsprogramm!\n");
    printf("Befehle: 's' (Schritt), 'd' (Drehung), 'q' (beenden)\n");

    while (command != 'q') {
        printf("Was soll der Roboter als nächstes tun?\n");
        scanf(" %c", &command);

        switch (command) {
            case 's':
                steps++;
                printf("Der Roboter geht einen Schritt nach vorne.\n");
                break;
            case 'd':
                turns++;
                printf("Der Roboter dreht sich um 90 Grad nach rechts.\n");
                if (turns == 4) {
                    back_steps = steps / 2;
                    printf("Der Roboter geht den halben Weg zurück, da er Akku braucht.\n");
                }
                break;
            case 'q':
                printf("Der Roboter wird beendet!\n");
                break;
            default:
                printf("Unbekannter Befehl, bitte versuchen Sie es erneut!\n");
                break;
        }
    }

    // Rückweg
    for (int i = 0; i < back_steps; i++) {
        printf("Der Roboter geht einen Schritt zurück.\n");
    }
    for (int i = 0; i < turns - 4; i++) {
        printf("Der Roboter dreht sich um 90 Grad nach links.\n");
    }

    // Ladestation
    printf("Der Roboter befindet sich 5 Schritte von der Ladestation entfernt.\n");
    for (int i = 0; i < 5; i++) {
        printf("Soll der Roboter einen Schritt zur Ladestation machen? (y/n)\n");
        char answer;
        scanf(" %c", &answer);
        if (answer == 'y') {
            printf("Der Roboter geht einen Schritt zur Ladestation.\n");
        } else {
            printf("Der Roboter wartet an Ort und Stelle.\n");
        }
    }

    printf("Der Roboter hat die Ladestation erreicht und ist zurück am Start!\n");

    return 0;
}
